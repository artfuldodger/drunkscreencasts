<div class="jumbotron">
  <div class="container">
    <h1>Drunk Screencasts</h1>
    <p>
      Have a drink and learn something
    </p>
  </div>
</div>

<% @videos.each do |video| %>
  <h2><%= link_to video.title, video %></h2>

  <p><%= l video.published_at.to_date %></p>

  <%= simple_format video.description %>

  <iframe type="text/html" width="640" height="390"
    src="http://www.youtube.com/embed/<%= video.youtube_id %>"
    frameborder="0"></iframe>

  <hr>
<% end %>

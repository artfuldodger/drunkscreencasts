<div class="jumbotron">
  <div class="container">
    <h1><%= @video.title %></h1>
    <p>
      Published on <%= l @video.published_at.to_date %>.
      Submitted by <%= link_to @video.user.name, user_path(@video.user) %>.
      <% if @video.editable_by?(current_user) %>
        <div class="pull-right">
          <%= link_to 'Edit', edit_video_path(@video), class: 'btn btn-default' %>
          <%= link_to 'Delete', video_path(@video), class: 'btn btn-danger',
                method: :delete, data: { confirm: 'Are you sure you want to delete this video?' } %>
        </div>
      <% end %>
    </p>
    <p><%= @video.description %></p>
  </div>
</div>

<iframe type="text/html" width="100%" height="580"
  src="http://www.youtube.com/embed/<%= @video.youtube_id %>"
  frameborder="0"></iframe>
